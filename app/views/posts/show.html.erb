<div class="w3-content" style="max-width:1400px">
  <!-- Grid -->
  <div class="w3-row">
    <h3><b>Blog</b></h3>
    <!-- Blog entries -->
    <div class="col-md-12">
      <!-- Blog entry -->
      <div class="w3-card-2 w3-white">
        <%= image_tag "blog-1.jpg", alt:  "Nature", style:"width: 100%;height: 300px;" %>
        <div class="w3-container">
          <h3><b><%= @post.title %></b></h3>
          <span class="w3-opacity"><%= @post.published_date.strftime("%B %d, %Y") %></span>
          <p><%= @post.body %></p>
        </div>
        <div class="w3-container">
          <p></p>
          <div class="w3-row">
            <div class="w3-col m8 s12">
              <b></b></p>
            </div>
            <div class="w3-col m4 w3-hide-small">
              <p><span class="w3-padding-large w3-right"><b>TagsÂ </b>
                <% @post.tags.each do |tag| %> 
                  <span class="w3-tag"><%= link_to tag.name, list_by_tag_post_path(tag) %></span></span></p>
                <% end %>  
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
  </div>
</div>